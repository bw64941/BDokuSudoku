<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/majorBoardGridLinesColor" />

            <stroke android:width="5dp" android:color="@color/majorBoardGridLinesColor" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <corners android:bottomLeftRadius="45dp" android:bottomRightRadius="45dp" android:topLeftRadius="45dp" android:topRightRadius="45dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/majorBoardGridLinesColor" />

            <stroke android:width="5dp" android:color="@color/majorBoardGridLinesColor" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:bottomLeftRadius="45dp" android:bottomRightRadius="45dp" android:topLeftRadius="45dp" android:topRightRadius="45dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/majorBoardGridLinesColor" />

            <stroke android:width="5dp" android:color="@color/majorBoardGridLinesColor" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:bottomLeftRadius="45dp" android:bottomRightRadius="45dp" android:topLeftRadius="45dp" android:topRightRadius="45dp" />
        </shape>
    </item>

    <item>

        <shape>
            <solid android:color="@color/majorBoardGridLinesColor" />

            <stroke android:width="5dp" android:color="@color/white" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:bottomLeftRadius="45dp" android:bottomRightRadius="45dp" android:topLeftRadius="45dp" android:topRightRadius="45dp" />
        </shape>
    </item>
</selector>