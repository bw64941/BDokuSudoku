<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bdoku_faded_blue"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/boardLinearLayout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <view
            android:id="@+id/boardView"
            class="com.ironbrand.view.BoardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/timerPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/timerLabel"
            android:textColor="@color/majorBoardGridLinesColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/timerLabel"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/timerText"
            android:textColor="@color/majorBoardGridLinesColor"
            android:textSize="20sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:background="@color/bdoku_dark_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="visible">


        <Button
            android:id="@+id/validate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/check_button"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <ToggleButton
            android:id="@+id/pencilToggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@id/validate"
            android:background="@drawable/edit_button"
            android:checked="false"
            android:gravity="center"
            android:maxWidth="100dip"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textOff="@string/pencilButtonText"
            android:textOn="@string/pencilButtonText" />

        <Button
            android:id="@+id/save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@id/pencilToggle"
            android:background="@drawable/save_button"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <Button
            android:id="@+id/undo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:layout_toEndOf="@id/save"
            android:background="@drawable/undo_button"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="visible" />


    </RelativeLayout>

</LinearLayout>