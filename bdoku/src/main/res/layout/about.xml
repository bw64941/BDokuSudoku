<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:background="@drawable/bdoku_round_layout"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:padding="10dp">

    <TextView
        android:id="@+id/aboutTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp"
        android:background="@color/bdoku_faded_blue"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="@string/aboutTitleText"
        android:textColor="@color/majorBoardGridLinesColor"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/about_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutTextTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:background="@color/bdoku_faded_blue"
        android:fontFamily="@font/alfa_slab_one"
        android:maxLines="25"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:text="@string/aboutDialogText"
        android:textColor="@color/majorBoardGridLinesColor"
        android:textSize="20sp" />
</RelativeLayout>