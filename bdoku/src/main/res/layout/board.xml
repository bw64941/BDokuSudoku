<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bdoku_faded_blue"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/interstitial_ad_unit_id" />

    <LinearLayout
        android:id="@+id/topPanelHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_top_frame"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/timerPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bdoku_dark_blue"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/difficultyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/alfa_slab_one"

            android:text="@string/difficultyLabel"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/difficultyChosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/difficultyLabel"
            android:fontFamily="@font/alfa_slab_one"
            android:textColor="@color/bdoku_light_blue"
            android:textSize="20sp" />


        <Button
            android:id="@+id/hintButton"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/difficultyLabel"
            android:background="@drawable/bdoku_btn"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/hintButtonText"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/solveButton"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/hintButton"
            android:background="@drawable/bdoku_btn"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/solveMenuItem"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/timerLabel"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timerLabel"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/timerText"
            android:textColor="@color/bdoku_light_blue"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topPanelFooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_top_frame"
        android:orientation="horizontal" />


    <RelativeLayout
        android:id="@+id/mainBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_top_frame"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/boardLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@+id/header"
            android:clipToPadding="true"
            android:orientation="horizontal">

            <view
                android:id="@+id/boardView"
                class="com.ironbrand.view.BoardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boardLinearLayout"
            android:background="@drawable/popup_bottom_frame"
            android:orientation="horizontal" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/toolbarFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <LinearLayout
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_top_frame"
            android:orientation="horizontal" />


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/header2"
            android:layout_gravity="center_vertical"
            android:background="@color/bdoku_dark_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:visibility="visible">


            <Button
                android:id="@+id/validate"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/check_button"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

            <ToggleButton
                android:id="@+id/pencilToggle"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="25dp"
                android:layout_toEndOf="@id/validate"
                android:background="@drawable/edit_button"
                android:checked="false"
                android:gravity="center"
                android:maxWidth="100dip"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textOff="@string/pencilButtonText"
                android:textOn="@string/pencilButtonText" />

            <Button
                android:id="@+id/save"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="25dp"
                android:layout_toEndOf="@id/pencilToggle"
                android:background="@drawable/save_button"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />

            <Button
                android:id="@+id/undo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="25dp"
                android:layout_toEndOf="@id/save"
                android:background="@drawable/undo_button"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="visible" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/footer3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:background="@drawable/popup_bottom_frame"
            android:orientation="horizontal" />

    </RelativeLayout>

</LinearLayout>